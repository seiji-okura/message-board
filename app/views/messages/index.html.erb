<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <div>
        <span class="label label-info"><%=message.name%>(<%=message.age%>)</span>
        <%=message.body%>
        (<%= link_to "edit" , edit_message_path(message) %>
         <%= link_to "destroy", message, method: :delete, data:{confirm:"削除していいっすか？"}%>)
      <br>
      </div>
    <%end%>
  </div>
</div>
<h1>メッセージの編集</h1>

<%= render 'form' %>

