<div class="panel panel-default">
  <div class="panel-heading">
    メッセージ一覧
  </div>
  <div class="panel-body">
    <% @messages.each do |message| %>
      <div>
        <span class="label label-info"><%=message.name%></span>
        <%=message.body%>
      </div>
    <%end%>
  </div>
</div>

<%= form_for(@message, html: {class: 'none'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="input-group">
      <span for="message_name" class="input-group-addon">名前</span>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span for="message_body" class="input-group-addon">本文</span>
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
      <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
  
<% end %>

