<%= form_for(@message, html: {class: 'none'}) do |f| %>
  <% if @message.errors.present? %>
    <div class="alert alert-danger">
      <%= alert %>
      <ul>
        <% @message.errors.full_messages.each do |full_message| %>
          <li>
            <%= full_message %>
          </li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="form-group">
    <div class="input-group">
      <span for="message_name" class="input-group-addon">名前</span>
      <%= f.text_field :name, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span for="message_age" class="input-group-addon">年齢</span>
      <%= f.number_field :age, class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <div class="input-group">
      <span for="message_body" class="input-group-addon">本文</span>
      <%= f.text_area :body, class: "form-control" %>
    </div>
  </div>
  
  <div class="form-group">
      <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
  
<% end %>
